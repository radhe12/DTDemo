@{
    ViewBag.Title = "Home Page";
}
@using DTDemo.Models
@model IEnumerable<DealerTrack>
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  

    <div class="main">
        <h1>Plese Upload File </h1>
        <br />
         <input type="file" accept=".csv" name="postedFile"  required data-val="true" data-val-required="File is required"/><br />
        
        <input type="submit" class="btn" value="View" />
    </div>
    <p>@Html.Encode(ViewData["Message"])</p>
}
@if (Model.Count() > 0)
{
    <hr />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Deal Number</th>
                <th>CustomerName</th>
                <th>DealershipName</th>
                <th>Vechile</th>
                <th>Price($ CAD)</th>
                <th>Date</th>
            </tr>
            @foreach (DealerTrack dt in Model)
            {
                <tr>
                    <td style="margin:auto">@dt.DealNumber</td>
                    <td style="margin:auto">@dt.CustomerName</td>
                    <td style="margin:auto">@dt.DealershipName</td>
                    <td style="margin:auto">@dt.Vehicle</td>
                    <td style="margin:auto">@dt.Price</td>
                    <td style="margin:auto">@dt.Date.ToShortDateString()</td>
                </tr>
            }
        </table>
}
